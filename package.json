{
  "name": "vr-hypno-poc",
  "version": "1.0.0",
  "description": "POC for VR Hypnosis App",
  "main": "dist-electron/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "vue": "^3.4.21",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^1.8.27"
  },
  "build": {
    "appId": "com.vrhypno.app",
    "productName": "VR Hypno POC",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "artifactName": "VR-Hypno-POC-Setup-${version}.exe"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "artifactName": "VR-Hypno-POC-${version}.${ext}"
    }
  }
}